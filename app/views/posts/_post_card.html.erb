<div class="card mb-2 mt-2">
  <div class="card-header">
    <div class="d-flex justify-content-between">
      <%= link_to user_post_path(@user.id, post.id), id: "user_post#{post.id}" do %>
        <h5 class="card-title"><%= capitalize(post.title) %></h5>
      <% end %>
      <%# if can? :destroy, post %>
        <%= button_to post_path(post.id), method: :delete, class: "trash-btn" do %>
          <i class='bx bx-trash-alt box-icon'></i>
        <% end %>
      <%# end %>
    </div>
  </div>
  <div class="card-body">
    <p class="post__text"><%= shorten_text(post.text) %>  </p>
    <%= render partial: "posts/no_of_comments", locals: { total_comments: post.comments_count } %>, <%= render partial: "posts/no_of_likes", locals: { total_likes: post.likes_count } %>
  </div>
</div>
