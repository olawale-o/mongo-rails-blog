<div class="col-md-6 offset-3">
  <h2 class="form__header">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field my-4">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "you@example.com" %>
    </div>

    <div class="field my-4">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "******" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: "check__label" %>
      </div>
    <% end %>

    <div class="d-flex justify-content-center">
      <%= f.submit "Log in", class: "btn btn-danger" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
